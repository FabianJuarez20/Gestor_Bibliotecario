<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>

<GridPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml" fx:controller="modules.gestorbibliotecario.HelloController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Título:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="txtTitulo" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Autor:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="txtAutor" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Año de publicación:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="txtAnio" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Editorial:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="txtEditorial" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Button text="Agregar" onAction="#agregarLibro" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Button text="Eliminar" onAction="#eliminarLibro" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <ListView fx:id="listaLibros" prefHeight="200" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2"/>
</GridPane>